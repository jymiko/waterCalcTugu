<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="20dp"
    tools:context=".KalkulatorActivity">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kalkulator Biologi"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Tanggal"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/tgl_catatdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:clickable="true"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:hint="Tanggal Catat"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Waktu"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:textSize="18dp"/>
            <EditText
                android:id="@+id/wkt_catat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:clickable="true"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:hint="Waktu Catat"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Liter Air (H2O)"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/literan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:hint="Inputan/liter" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="0.7"
                android:text="Liter Ozone (O3)"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/bakteri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:hint="Inputan/liter" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:text="Biotrops(CFU)"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ozon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:hint="Inputan/liter" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Hasil Takaran"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/hasildata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@android:color/black"
                android:hint="hasil perhitungan"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:layout_weight="1">
        <Button
            android:id="@+id/btnhitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textSize="14dp"
            android:padding="5dp"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@android:color/white"
            android:text="Hitung" />
        <Button
            android:id="@+id/btnsavetodatabase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:background="@drawable/mybutton"
            android:fontFamily="@font/opensans_regular"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:text="save to database" />
    </LinearLayout>
    </LinearLayout>


</ScrollView>